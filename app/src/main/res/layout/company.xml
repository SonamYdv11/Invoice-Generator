<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout44"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00569a"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnHomeScreen"
            android:layout_marginRight="50dp"
            android:layout_width="108dp"
            android:layout_height="70dp"
            android:src="@drawable/header" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Creation"
            android:layout_gravity="center|left"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnCompanyLogo"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_companylog" />

    </LinearLayout>
    <!-- first row of the table layout-->

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/simpleTableLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Customer Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/txtCompanyCountry"
                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="India" >
            </EditText>
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tax"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/txtCompanyTax"

                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
            </EditText>
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tax Reg No. (TIN)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtCompanyTIN"
                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/btnCompany"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_gravity="left|top"
                android:text="Company" />

            <Button
                android:id="@+id/btnContactInfo"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="100dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Contact"
                />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btnInvoiceOptions"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="100dp"
                android:layout_span="4"
                android:text="Options" />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btnCompanySave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@drawable/setsave"
                android:text="" />

            <Button
                android:id="@+id/btnCompanyCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/setcancel"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent">
        </TableRow>
    </TableLayout>



</LinearLayout>