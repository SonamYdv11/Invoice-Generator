<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e3e3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout44"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00569a"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnHomeScreen"
            android:layout_marginRight="50dp"
            android:layout_width="108dp"
            android:layout_height="70dp"
            android:src="@drawable/header" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Creation"
            android:layout_gravity="center|left"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"> <!-- stretch the second column of the layout-->

        <TableRow

            android:id="@+id/firstRow5"
            android:layout_width="fill_parent"
            android:layout_height="278dp">

            <Button
                android:id="@+id/btnCompanyLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_span="3"
                android:visibility="gone"
                android:background="@drawable/ic_companylog" />

        </TableRow>
        <!-- first row of the table layout-->
        <TableRow

            android:id="@+id/firstRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Customer Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtCompanyCountry"
                android:enabled="false"
                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_span="2"
                android:text="India" >
            </EditText>
        </TableRow>
        <TableRow
            android:id="@+id/firstRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tax"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtCompanyTax"
                android:enabled="false"
                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_span="2">
            </EditText>
        </TableRow>
        <TableRow

            android:id="@+id/firstRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row-->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Tax Reg No. (TIN)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtCompanyTIN"
                android:enabled="false"
                android:background="@drawable/settextbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_span="2">
            </EditText>
        </TableRow>
        <TableRow

            android:id="@+id/firstRow523"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            >


            <!-- first element of the row-->
            <Button
                android:id="@+id/btnCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:background="@drawable/ic_details" />

            <Button
                android:id="@+id/btnInvoiceOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@android:dimen/thumbnail_width"
                android:background="@drawable/ic_create" />
            <Button
                android:id="@+id/btnContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_contact"/>
        </TableRow>

        <TableRow

            android:id="@+id/firstRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <!-- first element of the row-->
            <Button
                android:id="@+id/btnCompanySave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setsave"
                android:text="" />

            <Button
                android:id="@+id/btnCompanyCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/setcancel"
                android:text="" />
        </TableRow>
    </TableLayout>

</LinearLayout>