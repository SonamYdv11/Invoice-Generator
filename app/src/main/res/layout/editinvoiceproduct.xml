<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Select Item"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/spinvEditProductSelect"
            android:layout_width="137dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pdropdown" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtInvProdDesc"
            android:layout_marginTop="20dp"
            android:layout_width="157dp"
            android:layout_height="36dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ptxtbox"
            android:inputType="textMultiLine" />
         <TextView
             android:id="@+id/textView90"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:text="Discount"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="#000"
             android:textSize="20dp" />
         
         <EditText
            android:id="@+id/txtProdDiscount"
            android:layout_width="157dp"
            android:layout_height="36dp"
             android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number|numberDecimal"
            android:background="@drawable/ptxtbox" />

    </LinearLayout>

   <LinearLayout
        android:id="@+id/linearLayout100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Rate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtInvProdRate"
            android:layout_width="157dp"
            android:layout_height="36dp"
            android:layout_marginRight="0dp"
            android:inputType="number|numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ptxtbox" />
        
          <TextView
              android:id="@+id/textView20"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text="Quantity"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#000"
              android:textSize="20dp" />

        <EditText
            android:id="@+id/txtProdQty"
            android:layout_width="157dp"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:background="@drawable/ptxtbox" >

            <requestFocus />
        </EditText>
    </LinearLayout>
   
   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Product Image:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/pInvImage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/defaultimage" />
        
          <Button
            android:id="@+id/btnInvEditProdNext"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btnnext"
            android:text="" />
        <Button
            android:id="@+id/btnInvEditProdCancel"
            android:layout_width="138dp"
            android:layout_height="48dp"
            android:background="@drawable/done"
            android:text="" />
          
    </LinearLayout>
     
   <LinearLayout
        android:id="@+id/linearLayout1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/te"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Product Code:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtInvEditProdCode"
            android:layout_width="157dp"
            android:layout_height="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ptxtbox" >
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Supplier"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtInvProdSupplier"
            android:layout_width="157dp"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ptxtbox" />
    </LinearLayout>


</LinearLayout>