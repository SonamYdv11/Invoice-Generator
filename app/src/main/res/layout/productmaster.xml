<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e3e3"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout44"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00569a"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnHomeScreen"
            android:layout_marginRight="50dp"
            android:layout_width="108dp"
            android:layout_height="70dp"
            android:src="@drawable/header" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Creation"
            android:layout_gravity="center|left"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/simpleTableLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:stretchColumns="*"> <!-- stretch the second column of the layout-->
            <TableRow
                android:id="@+id/firstRow5"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Code:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtProdCode"
                    android:background="@drawable/settextbutton" android:layout_span="2">

                    <requestFocus /></EditText>
            </TableRow>

            <TableRow
                android:id="@+id/firstRow5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product \nDescription:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/txtProdDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/description"
                android:inputType="textMultiLine"
                android:layout_span="2"/>

            </TableRow>
            <TableRow
                android:id="@+id/firstRow5"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Image:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="left"
                    android:src="@drawable/defaultimage" />

                <Button
                    android:id="@+id/btnProdpick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/ppick"
                    android:text="" />

            </TableRow>

            <TableRow

                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtProdSupplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settextbutton"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow

                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtProdRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settextbutton"
                    android:inputType="numberDecimal"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow

                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <!--<TextView android:id="@+id/dummy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>-->
                <Button
                    android:id="@+id/btnProdSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setsave" />

                <Button
                    android:id="@+id/btnProdCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setcancel" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>